<script>
    hideButton("menuindex");
</script>
<div class="ticketlinkdiv">
<h2><%=link_to 'Resolved Tickets.', resolved_tickets_path, class:'pasttickets switcherbutton'%></h2>
</div>
<div class="centering" id="logo">

<h2>Active Tickets.</h2>
</div>
<div class="centering">
<table class="tablebg">
    <thead>
        <th>ID.</th>
        <th>Issue.</th>
        <th>Description.</th>
        <th>Assigned To.</th>
        <th>Status.</th>
    </thead>

    <% @tickets.each do |t|%>
        <% if t.status != "Resolved" %>
        <tr>
            <td><%= link_to t.id, t%></td>
            <td><%= link_to t.title.truncate(25), t %></td>
            <td><%= link_to t.description.truncate(80), t%></td>
            <% if t.assigned_user %>
            <td><%= link_to assigned_user_name(t), User.find(t.assigned_user)%></td>
            <% else %>
            <td> Unassigned </td>
            <% end %>
            <td><%= link_to t.status, t, class: " linkbutton status #{t.status}"%></td>
        </tr>
        <% end %>
    <%end%>
</table>
</div>