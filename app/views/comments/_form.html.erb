
<%=form_with model: @ticket.comments, method: :post, url:ticket_comments_path(@ticket) do |form|%>
  <%=form.label "Current Status"%><br>
  <%=form.select :currentstatus, Comment::CURRENTSTATUS, :selected => @ticket.status, class:"linkbutton" %><br>
  <%=form.hidden_field :ticket_id, value: @ticket.id%>
  <%=form.label "Additional Info"%><br>
  <%=form.text_area :body%><br>
  <br>

  <%=form.submit 'Update Comment'%>

<%end%>
